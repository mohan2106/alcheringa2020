<resources>

    <!-- Base application theme. -->
    <attr name="colorDarkMode" format="reference|color" />
    <attr name="main_logo" format="reference"/>
    <attr name="arrow_back" format="reference"/>
    <attr name="notification_image" format="reference"/>
    <attr name="search_image" format="reference"/>
    <attr name="add_image" format="reference"/>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorDarkMode">@color/white</item>
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="main_logo">@drawable/logo_dark</item>
        <item name="arrow_back">@drawable/ic_arrow_back_dark</item>
        <item name="notification_image">@drawable/ic_notification_dark</item>
        <item name="search_image">@drawable/ic_search_dark</item>
        <item name="add_image">@drawable/ic_add_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="LightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffff</item>
        <item name="colorPrimaryDark">#ffff</item>
        <item name="colorAccent">#f4f4f4</item>
        <item name="colorDarkMode">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/custom_font</item>
        <item name="main_logo">@drawable/logo_light</item>
        <item name="arrow_back">@drawable/ic_arraow_back_light</item>
        <item name="notification_image">@drawable/ic_notification_light</item>
        <item name="search_image">@drawable/ic_search_light</item>
        <item name="add_image">@drawable/ic_add_light</item>
    </style>


    <style name="LightAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LightAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <style name="card_style" parent="CardView">
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPadding">5dp</item>
    </style>
    <style name="textBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textDescription">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="textDescriptionBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
